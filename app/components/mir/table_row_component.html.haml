%tbody
  %tr
    %td.text-right
      = render(RankingPosComponent.new(rank: @mir.rank))
    %td.text-right
      = @mir.to_timing.to_s
      - if includes_laps? || @mir.reaction_time > 0.0
        %br/
      - if @mir.reaction_time > 0.0
        %small.text-muted
          R: #{@mir.reaction_time}
      = render(Switch::RotatingComponent.new(target_id: "laps#{@mir.id}")) if includes_laps?
    %td
      = @mir.swimmer&.complete_name
      %br/
      %small.text-muted
        = @mir.swimmer&.year_of_birth
        - if @mir.respond_to?(:team)
          %i
            &nbsp;-&nbsp;#{TeamDecorator.decorate(@mir.team).link_to_full_name}
        - elsif @mir.respond_to?(:swimming_pool) && @mir.swimming_pool
          &nbsp;-&nbsp;#{@mir.swimming_pool&.link_to_full_name}
    %td
      .text-muted
        = result_score

- if includes_laps?
  = render(Laps::TableComponent.new(laps: laps))
