%tr.table-info{ id: dom_id, class: @collapsed ? 'collapse' : '' }
  %td.text-muted.text-right{ colspan: 2 }
    %small.length-in-meters
      %i= @lap.length_in_meters
      - if Rails.env.development?
        &nbsp;ID: #{@lap.id}
  %td.text-right{ colspan: 2 }
    .delta-timing.text-left
      %small
        #{@lap.to_timing} Δ
        &nbsp;
        %i.fa.fa-long-arrow-right
        &nbsp;
        #{@lap.timing_from_start} ⏱
