- pool = SwimmingPoolDecorator.decorate(@swimming_pool)
.wrapper-body
  .spacer-left

  .main-content#top-of-page
    #swimming-pool-show-title
      %h4.text-center.pb-3
        %i.fa.fa-map-marker
        %small
          %i.text-muted= t('swimming_pools.dashboard.subtitle')
    #swimming-pool-show-details
      %table.table.table-striped.table-sm
        %thead
          %tr
            %td{ id: 'full-name', scope: 'row', colspan: 2, class: 'bg-info text-center text-light' }
              %b= pool.text_label
        %tbody
          %tr
            %th{ scope: 'row' }= t('activerecord.attributes.goggles_db/swimming_pool.address')
            %td{ id: 'address' }
              = [pool.address, pool.city&.name].compact.join(', ')
              &nbsp;
              = pool.link_to_maps_or_name
          %tr
            %th{ scope: 'row' }= t('activerecord.attributes.goggles_db/swimming_pool.nick_name')
            %td{ id: 'nick-name' }
              = pool.nick_name
          %tr
            %th{ scope: 'row' }
              = t('activerecord.attributes.goggles_db/swimming_pool.lanes_number')
              \/
              = t('activerecord.attributes.goggles_db/swimming_pool.pool_type')
            %td{ id: 'pool-type' }
              #{pool.lanes_number}x #{pool.pool_type.label}
          %tr
            %th{ scope: 'row' }= t('activerecord.attributes.goggles_db/swimming_pool.phone_number')
            %td{ id: 'phone-number' }
              = pool.phone_number
          %tr
            %th{ scope: 'row' }= t('activerecord.attributes.goggles_db/swimming_pool.fax_number')
            %td{ id: 'fax-number' }
              = pool.fax_number
          %tr
            %th{ scope: 'row' }= t('activerecord.attributes.goggles_db/swimming_pool.e_mail')
            %td{ id: 'e-mail' }
              = pool.e_mail
          %tr
            %th{ scope: 'row' }= t('activerecord.attributes.goggles_db/swimming_pool.contact_name')
            %td{ id: 'contact-name' }
              = pool.contact_name

          %tr
            %th{ scope: 'row' }= t('activerecord.attributes.goggles_db/swimming_pool.multiple_pools')
            %td{ id: 'multiple-pools' }
              = render(Icon::CheckMarkComponent.new(value: pool.multiple_pools?))
          %tr
            %th{ scope: 'row' }= t('activerecord.attributes.goggles_db/swimming_pool.garden')
            %td{ id: 'garden-presence' }
              = render(Icon::CheckMarkComponent.new(value: pool.garden?))
          %tr
            %th{ scope: 'row' }= t('activerecord.attributes.goggles_db/swimming_pool.bar')
            %td{ id: 'bar-presence' }
              = render(Icon::CheckMarkComponent.new(value: pool.bar?))
          %tr
            %th{ scope: 'row' }= t('activerecord.attributes.goggles_db/swimming_pool.restaurant')
            %td{ id: 'restaurant-presence' }
              = render(Icon::CheckMarkComponent.new(value: pool.restaurant?))
          %tr
            %th{ scope: 'row' }= t('activerecord.attributes.goggles_db/swimming_pool.gym')
            %td{ id: 'gym-presence' }
              = render(Icon::CheckMarkComponent.new(value: pool.gym?))
          %tr
            %th{ scope: 'row' }= t('activerecord.attributes.goggles_db/swimming_pool.child_area')
            %td{ id: 'children-area-presence' }
              = render(Icon::CheckMarkComponent.new(value: pool.child_area?))

          %tr
            %th{ scope: 'row' }= t('activerecord.attributes.goggles_db/swimming_pool.locker_cabinet_type')
            %td{ id: 'locker-cabinet-type' }
              = pool&.locker_cabinet_type&.label
          %tr
            %th{ scope: 'row' }= t('activerecord.attributes.goggles_db/swimming_pool.shower_type')
            %td{ id: 'shower-type' }
              = pool&.shower_type&.label
          %tr
            %th{ scope: 'row' }= t('activerecord.attributes.goggles_db/swimming_pool.hair_dryer_type')
            %td{ id: 'hair-dryer-type' }
              = pool&.hair_dryer_type&.label

  .spacer-right
