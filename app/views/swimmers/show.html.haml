- swimmer = SwimmerDecorator.decorate(@swimmer)
.wrapper-body
  .spacer-left

  .main-content
    #swimmer-show-title
      %h4.text-center.pb-3
        %i.fa.fa-user
        = t('swimmers.radiography.title')
        &nbsp;
        %small
          %i.text-muted= t('swimmers.radiography.subtitle')
    #swimmer-show-details
      %table.table.table-striped.table-sm
        %thead
          %tr
            %th{ scope: 'row', class: 'bg-primary text-light' }
              = t('swimmers.name')
            %td{ id: 'full-name' }
              %b= swimmer.complete_name
        %tbody
          %tr
            %th{ scope: 'row' }= t('swimmers.birth_year_and_age')
            %td{ id: 'year-of-birth' }
              #{swimmer.year_of_birth} (~#{swimmer.swimmer_age})
          %tr
            %th{ scope: 'row' }= t('swimmers.current_category')
            %td{ id: 'curr-cat-code' }
              #{swimmer.current_fin_category_code} - #{swimmer.gender_type.label}
          %tr
            %th{ scope: 'row' }= t('swimmers.radiography.last_registered_category')
            %td{ id: 'last-cat-code' }
              = swimmer.last_category_code
          %tr
            %th{ scope: 'row' }= t('swimmers.affiliated_with')
            %td{ id: 'team-links' }
              = swimmer.link_to_teams(100) # limit names to 100 chars

