.wrapper-body
  .spacer-left

  .main-content#top-of-page
    %section#starred-calendars-title
      = render(Title::BreadCrumbLinkComponent.new(title: t('calendars.dashboard.starred_title'),
               css_icon: 'calendar', parent_title: t('home.my.dashboard_name'),
               parent_link: home_dashboard_path))

    %section#calendars-starred-navs
      .row-fluid.my-2
        %ul.nav.nav-tabs
          %li.nav-item
            .nav-link.active
              = t('calendars.dashboard.starred_list')
          %li.nav-item
            = link_to(t('calendars.dashboard.starred_map'), calendars_starred_map_path, class: 'nav-link')

    = render(partial: 'calendar_grid',
             locals: { grid: @grid, user_teams: @managed_teams, filterable: false })

  .spacer-right
