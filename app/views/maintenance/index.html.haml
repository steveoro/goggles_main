!!!
%html
  %head
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type' }/
    %title Goggles / Maintenance mode
    %meta{ charset: 'utf-8' }/
    %meta{ content: 'width=device-width, initial-scale=1, shrink-to-fit=no', name: 'viewport' }/
    %meta{ content: 'Master-Goggles maintenance page', name: 'description' }/
    %meta{ author: 'FASAR Software, Steve Alloro, 2012-2021' }/
    %meta{ content: 'Steve Alloro, FASAR Software', name: 'author' }/
    %meta{ content: 'Master swimming results', name: 'keywords' }/

  :css
    body {
      color: white;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI',
                   Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans',
                   'Helvetica Neue', sans-serif;
    }
    video {
      position: fixed;
      top: 50%;
      left: 50%;
      min-width: 100%;
      min-height: 100%;
      width: auto;
      height: auto;
      z-index: -100;
      transform: translateX(-50%) translateY(-50%);
      transition: 1s opacity;
    }
    .wrapper {
      display: flex;
      flex-direction: column;
    }
    .wrapper-body {
      flex-grow: 1;
      display: flex;
      flex-direction: row;
    }
    .spacer-left {
      width: 25%;
    }
    .main-content {
      flex-grow: 1;
    }
    .spacer-right {
      width: 25%; // (includes sidebar)
    }
    @media only screen and (max-width: 414px) {
      .spacer-left {
        width: 0%;
      }
      .spacer-right {
        width: 0%;
      }
    }
    .maintenance {
      justify-content: center;
      align-items: center;
      height: 100%;
    }
    h1 {
      text-align: center;
      color: rgb(12, 4, 126);
      font-size: 2rem;
      margin-top: 30%;
    }
    h2 {
      text-align: center;
      color: rgb(255 202 54);
      font-size: 1.5rem;
      margin-top: 3rem;
    }
    .text-acqua {
      color: rgb(20, 75, 107);
    }
    .centered {
      text-align: center;
      font-size: 1.5rem;
      margin-top: 2rem;
    }

  %body
    = video_tag('underwater.m4v', id: 'bgvid', poster: 'underwater.png',
                autoplay: 'true', width: '100%', height: '100%', loop: 'true', muted: 'true',
                playsinline: '')

    .wrapper
      .wrapper-body
        .spacer-left
        .main-content
          .maintenance#content
            %h1
              = image_tag('goggles_blue_128.png')
              %br/
              Master-Goggles
            %h2
              = I18n.t('maintenance.title')
            %h2
              .text-acqua= GogglesDb::Version::EMOJI_STRONGMAN
            %p.centered.text-acqua
              = I18n.t('maintenance.working_on_new_version_back_during_year')
            %p.centered
              = I18n.t('maintenance.see_u_soon')
        .spacer-right
