.wrapper-body
  .spacer-left

  .main-content
    .container.mb-4.py-3.shadow-box.bg-light-green
      .row-fluid#latest-calendars
        %h4.text-center
          = t('calendars.updated_calendars.title')
        %ul
          %i= t('calendars.updated_calendars.no_recent_updates') if @latest_calendars.blank?
          - @latest_calendars&.each do |calendar|
            .row.mt-2
              .col-sm
                %li
                  = calendar&.scheduled_date
                  - if calendar&.meeting
                    - city_name = calendar.meeting&.swimming_pools&.first&.city&.name || calendar.meeting_place
                    = MeetingDecorator.decorate(calendar.meeting).link_to_full_name
                    %i
                      = ' - '
                      = city_name
                  - else
                    = calendar&.meeting_name
                    %i
                      = ' - '
                      = calendar&.meeting_place
              .col-sm-4
                - if calendar&.updated_at
                  %small
                    %i
                      = t('calendars.updated_calendars.updated_at')
                      = I18n.l(calendar.updated_at.to_date)

    .row-fluid.my-4
      %hr/
    .row-fluid#about
      %h4.text-center
        = t('about.title')
        = image_tag('goggles_blue_128', width: '64px')
      %ul
        %li.my-1.mr-3= t('about.point_1').html_safe
        %li.my-1.mr-3= t('about.point_2').html_safe
        %li.my-1.mr-3= t('about.point_3').html_safe
        %li.my-1.mr-3= t('about.point_4').html_safe
        %li.my-1.mr-3= t('about.point_5').html_safe

    .row-fluid
      %p &nbsp;
    .row-fluid#how-does-it-work
      = render(partial: 'how_does_it_work')

    .row-fluid
      %p &nbsp;
    .row-fluid#who-we-are
      %h5.mx-2.text-left= t('who_we_are.title')
      %p.mx-2= t('who_we_are.point_1').html_safe

    .row-fluid
      %p &nbsp;
    .row-fluid#contributing
      = render(partial: 'contributing')

    .row-fluid
      %p &nbsp;
      %hr.bg-info
      %p &nbsp;

    .row-fluid#faq
      = render(partial: 'faq')

    .row-fluid
      %p &nbsp;
      %hr.bg-info
      %p &nbsp;

    .row-fluid#privacy-policy
      = render(partial: 'privacy_policy')

    .row-fluid
      %p &nbsp;
    .row-fluid#legal-terms
      = render(partial: 'legal_terms')

    .row-fluid
      %p &nbsp;
      .text-center
        %small
          %i Made with ‚ù§ in Reggio Emilia, Italy
      %hr.bg-info
      %p &nbsp;

    .row-fluid
      %p.mx-2= link_to(t('about.go_back'), root_path)

  .spacer-right
