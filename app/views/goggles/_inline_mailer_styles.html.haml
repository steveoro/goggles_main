:css
  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI',
                 Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans',
                 'Helvetica Neue', sans-serif;
  }
  h1 {
    color: rgb(12, 4, 126);
    text-align: center;
    font-size: 2.5rem;
    margin-top: 2rem;
  }
  h2 {
    color: rgb(20, 75, 107);
    text-align: center;
    font-size: 2rem;
    margin-top: 2rem;
  }
  .centered {
    margin-top: 2rem;
    margin-bottom: 2rem;
    text-align: center;
  }
  .shadow-box {
    margin-left: 10%;
    margin-right: 10%;
    border-radius: 4px;
    box-shadow: 0 2px 8px rgb(50 50 50 / 33%);
    padding: 1rem !important;
    background-color: #dee2e6;
  }
